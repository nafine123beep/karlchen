{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/engine/*": ["src/engine/*"],
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/store/*": ["src/store/*"],
      "@/data/*": ["src/data/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/navigation/*": ["src/navigation/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*", "App.tsx", "index.js"],
  "exclude": ["node_modules"]
}
